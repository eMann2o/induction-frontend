{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "frontend/build/server/**",
          "frontend/build/client/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.js" 
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/server/index.js"
    }
  ]
}